{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,
        "jsx": "react-jsx"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}